<style>
    #comments {
        margin: 0 auto;
        padding: 1rem;
        max-width: 640px;
        font-family: sans-serif;
        color: #333;

        font-size: 12pt;
    }

    h1 {
        color: #555;
        font-weight: normal;
        border-bottom: 2px solid #CCC;
        margin-bottom: 2rem;
    }

    #comments {
        padding: 1rem 2rem;
    }

    .comment {
        position: relative;
        margin: 2rem 0 0 0;
        background-color: #EEE;
        border: 2px solid #AAA;
        -webkit-border-radius: 0.25rem;
        -moz-border-radius: 0.25rem;
        border-radius: 0.25rem;
        font-size: 10pt;
    }

    .username {
        position: absolute;
        top: -1.5em;
        left: 0;
        margin-left: 2rem;
        font-weight: bold;
    }

    .comment p {
        margin: 0.5rem 0.5rem 0.5rem 2rem;
    }

    .avatar {
        position: absolute;
        max-width: 3rem;
        max-height: 3rem;
        border: 2px solid #AAA;
        -webkit-border-radius: 1.5rem;
        -moz-border-radius: 1.5rem;
        border-radius: 1.5rem;
        top: -1.5rem;
        left: -1.5rem;
    }
</style>

<header>
    <h1>Comments</h1>
</header>
{{#if loggedin }}
<form method="post" action="comment_{{ pgName }}">
    <p>
        <textarea name="comment" id="user" cols="120"></textarea>
        <input type="submit" value="   Send   ">
    </p>
</form>
{{else }}
<h3>
    <a href="/login">Login</a> to leave a comment
</h3>
{{/if }}
<section id="comments">
    {{#each comments}}
    <div class="comment">
        <div class="username">{{ this.username }}</div>
        <img src="blank-avatar.png" class="avatar" alt="user image" />
        <p>{{ this.comment }}</p>
    </div>
    {{/each}}
</section>